<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EDED"
    tools:context=".RegisterActivity">


    <TextView
        android:id="@+id/nameDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:textColor="@color/black"
        android:text="Smile Delivery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageDelivery"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:src="@drawable/smile2"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/nameDelivery" />

    <TextView
        android:id="@+id/txvLogin"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="50dp"
        android:text="Login"
        app:layout_constraintTop_toBottomOf="@+id/imageDelivery"
        app:layout_constraintStart_toStartOf="@+id/edtLogin"/>

    <EditText
        android:id="@+id/edtLogin"
        android:layout_width="320dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txvLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Digite seu Login"
        android:inputType="textEmailAddress"
        android:textAlignment="center"/>


    <TextView
        android:id="@+id/txvEmail"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:text="Email"
        app:layout_constraintTop_toBottomOf="@+id/edtLogin"
        app:layout_constraintStart_toStartOf="@+id/edtEmail"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="320dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Digite seu Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txvPassword"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:text="Senha"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail"
        app:layout_constraintStart_toStartOf="@+id/edtPassword"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="320dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txvPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Digite sua Senha"
        android:inputType="textPassword"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txvImage"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:text="Imagem"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword"
        app:layout_constraintStart_toStartOf="@+id/edtImage"/>

    <EditText
        android:id="@+id/edtImage"
        android:layout_width="320dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txvImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Digite o link da imagem"
        android:inputType="text"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txvEndereco"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:text="Endereço"
        app:layout_constraintTop_toBottomOf="@+id/edtImage"
        app:layout_constraintStart_toStartOf="@+id/edtEndereco"/>

    <EditText
        android:id="@+id/edtEndereco"
        android:layout_width="320dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txvEndereco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Digite seu Endereço"
        android:inputType="text"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/buttonDelivery"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:backgroundTint="#FFA500"
        app:layout_constraintTop_toBottomOf="@+id/edtEndereco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:text="Realizar Cadastro"
        android:textAlignment="center"/>









</androidx.constraintlayout.widget.ConstraintLayout>